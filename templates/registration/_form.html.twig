{{ form_start(form) }}
    <div class="border-b border-gray-300 dark:border-gray-100 mt-4"></div>
    <div class="text-xl mt-1">
        Basic Information
    </div>
    <div class="text-gray-500 dark:text-gray-300 border-gray-300 dark:border-gray-100 mb-1 pb-2">
        Enter your credentials
    </div>

    <div>
        {{ form_label(form.email, null, {
            label_attr: {
                class: 'block text-sm text-gray-700 dark:text-gray-300 font-medium'
            }
        }) }}
        {{ form_widget(form.email, {
            type: 'email',
            attr: {
                class: 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 tm-1 mb-2'
            }
        }) }}
        {{ form_errors(form.email) }}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            {{ form_label(form.plainPassword.first, 'Password', {
                label_attr: {
                    class: 'block text-sm text-gray-700 dark:text-gray-300 font-medium'
                }
            }) }}
            {{ form_widget(form.plainPassword.first, {
                attr: {
                    class: 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 tm-1 mb-2'
                }
            }) }}
            {{ form_errors(form.plainPassword.first) }}
        </div>
        <div>
            {{ form_label(form.plainPassword.second, 'Retype password', {
                label_attr: {
                    class: 'block text-sm text-gray-700 dark:text-gray-300 font-medium'
                }
            }) }}
            {{ form_widget(form.plainPassword.second, {
                attr: {
                    class: 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 tm-1 mb-2'
                }
            }) }}
            {{ form_errors(form.plainPassword.second) }}
        </div>
    </div>

    <div class="flex items-center mt-4 mb-4">
        {{ form_widget(form.agreeTerms, {
            attr: {
                class: 'h4 w-4 rouded border-gray border text-indigo-300 mr-2'
            }
        }) }}
        {{ form_label(form.agreeTerms, 'Agree to terms', {
            label_attr: {
                class: 'text-sm text-gray-700 dark:text-gray-300 font-medium'
            }
        }) }}
    </div>

    <div class="border-b border-gray-300 dark:border-gray-100 mt-4"></div>
    <div class="text-xl mt-1">
        Profile
    </div>
    <div class="text-gray-500 dark:text-gray-300 border-gray-300 dark:border-gray-100 mb-1 pb-2">
        Enter more details about yourself. (You can do it later)
    </div>

    {{ include('user_profile/_form.html.twig', {form: form.profile}) }}

    <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Register</button>
{{ form_end(form) }}