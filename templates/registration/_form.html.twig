{{ form_start(form) }}
    <div>
        {{ form_label(form.email, null, {
            label_attr: {
                class: 'block text-sm text-gray-700 dark:text-gray-300 font-medium'
            }
        }) }}
        {{ form_widget(form.email, {
            type: 'email',
            attr: {
                class: 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 tm-1 mb-2'
            }
        }) }}
        {{ form_errors(form.email) }}
    </div>

    <div>
        {{ form_label(form.plainPassword, 'Password', {
            label_attr: {
                class: 'block text-sm text-gray-700 dark:text-gray-300 font-medium'
            }
        }) }}
        {{ form_widget(form.plainPassword, {
            attr: {
                class: 'block w-full shadow-sm border-gray-300 dark:border-transparent dark:text-gray-800 rounded-md border p-2 tm-1 mb-2'
            }
        }) }}
        {{ form_errors(form.plainPassword) }}
    </div>

    <div class="flex items-center mt-4 mb-4">
        {{ form_widget(form.agreeTerms, {
            attr: {
                class: 'h4 w-4 rouded border-gray border text-indigo-300 mr-2'
            }
        }) }}
        {{ form_label(form.agreeTerms, 'Agree to terms', {
            label_attr: {
                class: 'text-sm text-gray-700 dark:text-gray-300 font-medium'
            }
        }) }}
    </div>

    <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Register</button>
{{ form_end(form) }}