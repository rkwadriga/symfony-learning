{% extends 'base.html.twig' %}

{% block title %}Post - {{ post.title }}{% endblock %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <div>{{ post.text }}</div>
    <div style="color: grey;">
        {% if date(post.createdAt) < date('-1 year') %}
            Older than 1 year
        {% else %}
            {{ post.createdAt|date('Y-m-d') }}
        {% endif %}
    </div>
{% endblock %}