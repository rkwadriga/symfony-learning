{% extends 'base.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div>
        {% if (posts|length) > 0 %}
            {% for post in posts %}
                <div>
                    <a href="{{ path('app_micro_post_show', {id: post.id}) }}">{{ post.title }}</a>
                </div>
                {{ include('micro_post/_micro-post.html.twig', {post: post}) }}
            {% endfor %}
        {% else %}
            There is no posts
        {% endif %}
    </div>
{% endblock %}
